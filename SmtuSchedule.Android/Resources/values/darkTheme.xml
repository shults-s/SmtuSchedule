<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <style name="Theme.SmtuSchedule.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.SmtuSchedule.Dark.Toolbar.Title</item>

        <item name="colorDivider">@color/dividerNight</item>
        <item name="colorAccent">@color/accentNight</item>
        <item name="colorPrimary">@color/primaryNight</item>
        <item name="colorPrimaryDark">@color/primaryDarkNight</item>

        <item name="textColorError">@color/errorTextNight</item>
        <item name="textColorPrimary">@color/primaryTextNight</item>
        <item name="textColorSecondary">@color/secondaryTextNight</item>

        <item name="textColorToolbar">@color/toolbarTitleTextNight</item>
        <item name="textColorSubjectPrimary">@color/subjectPrimaryTextNight</item>
        <item name="textColorSubjectTertiary">@color/subjectTertiaryTextNight</item>
        <item name="textColorSubjectSecondary">@color/subjectSecondaryTextNight</item>

        <item name="android:itemBackground">@color/primaryNight</item>
        <item name="android:windowBackground">@color/windowBackgroundNight</item>

        <item name="alertDialogTheme">@style/Theme.SmtuSchedule.Dark.Dialog</item>
        <item name="preferenceTheme">@style/ThemeOverlay.SmtuSchedule.Dark.Preference</item>

        <item name="toolbarStyle">@style/Widget.SmtuSchedule.Dark.Toolbar</item>
        <item name="snackbarStyle">@style/Widget.SmtuSchedule.Dark.Snackbar</item>
        <item name="popupMenuStyle">@style/Widget.SmtuSchedule.Dark.PopupMenu</item>

        <item name="android:textColorPrimaryInverse">@color/primaryTextNight</item>
        <item name="android:textColorSecondaryInverse">@color/secondaryTextNight</item>
        <item name="android:datePickerStyle">@style/Widget.SmtuSchedule.Dark.DatePicker</item>
    </style>

    <style name="TextAppearance.Widget.SmtuSchedule.Dark.Toolbar.Title"
           parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/largeTextSize</item>
        <item name="android:textColor">@color/toolbarTitleTextNight</item>
    </style>

    <style name="Widget.SmtuSchedule.Dark.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/primaryNight</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="Widget.SmtuSchedule.Dark.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/primaryNight</item>
    </style>

    <style name="Widget.SmtuSchedule.Dark.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="overlapAnchor">true</item>
        <item name="android:popupBackground">@color/primaryNight</item>
    </style>

    <style name="Widget.SmtuSchedule.Dark.DatePicker" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:headerBackground">@color/primaryNight</item>
    </style>

    <style name="Theme.SmtuSchedule.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/accentNight</item>
        <item name="android:windowBackground">@color/primaryNight</item>

        <item name="android:textColorPrimaryInverse">@color/primaryTextNight</item>
        <item name="android:textColorSecondaryInverse">@color/secondaryTextNight</item>
        <item name="android:datePickerStyle">@style/Widget.SmtuSchedule.Dark.DatePicker</item>
    </style>

    <style name="ThemeOverlay.SmtuSchedule.Dark.Popup" parent="ThemeOverlay.AppCompat" />

    <style name="ThemeOverlay.SmtuSchedule.Dark.Preference" parent="PreferenceThemeOverlay.v14.Material" />
</resources>