<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <style name="Theme.SmtuSchedule.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.SmtuSchedule.Light.Toolbar.Title</item>

        <item name="colorDivider">@color/dividerDay</item>
        <item name="colorAccent">@color/accentDay</item>
        <item name="colorPrimary">@color/primaryDay</item>
        <item name="colorPrimaryDark">@color/primaryDarkDay</item>

        <item name="textColorError">@color/errorTextDay</item>
        <item name="textColorPrimary">@color/primaryTextDay</item>
        <item name="textColorSecondary">@color/secondaryTextDay</item>

        <item name="textColorToolbar">@color/toolbarTitleTextDay</item>
        <item name="textColorSubjectPrimary">@color/subjectPrimaryTextDay</item>
        <item name="textColorSubjectTertiary">@color/subjectTertiaryTextDay</item>
        <item name="textColorSubjectSecondary">@color/subjectSecondaryTextDay</item>

        <!--<item name="android:itemBackground">@color/windowBackgroundDay</item>-->
        <item name="android:windowBackground">@color/windowBackgroundDay</item>

        <item name="toolbarStyle">@style/Widget.SmtuSchedule.Light.Toolbar</item>
        <item name="snackbarStyle">@style/Widget.SmtuSchedule.Light.Snackbar</item>
        <item name="popupMenuStyle">@style/Widget.SmtuSchedule.Light.PopupMenu</item>

        <item name="alertDialogTheme">@style/Theme.SmtuSchedule.Light.Dialog</item>
        <item name="preferenceTheme">@style/ThemeOverlay.SmtuSchedule.Light.Preference</item>
    </style>

    <style name="TextAppearance.Widget.SmtuSchedule.Light.Toolbar.Title"
           parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/largeTextSize</item>
        <item name="android:textColor">@color/toolbarTitleTextDay</item>
    </style>

    <style name="Widget.SmtuSchedule.Light.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/primaryDay</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="Widget.SmtuSchedule.Light.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/primaryDarkNight</item>
    </style>

    <style name="Widget.SmtuSchedule.Light.PopupMenu" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="overlapAnchor">true</item>
        <!--<item name="android:popupBackground">@color/windowBackgroundDay</item>-->
    </style>

    <style name="Theme.SmtuSchedule.Light.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primaryDay</item>
        <!--<item name="android:windowBackground">@color/windowBackgroundDay</item>-->
    </style>

    <style name="ThemeOverlay.SmtuSchedule.Light.Popup" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeOverlay.SmtuSchedule.Light.Preference" parent="PreferenceThemeOverlay.v14.Material" />
</resources>