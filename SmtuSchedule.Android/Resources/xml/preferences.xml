<?xml version="1.0" encoding="utf-8" ?>
<androidx.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <shults.smtuschedule.android.views.DatePreference
        android:key="UpperWeekDate"
        android:title="@string/preferenceUpperWeekDateTitle"
        android:summary="@string/preferenceUpperWeekDateSummary"
        android:layout="@layout/customPreference" />
    <shults.smtuschedule.android.views.CustomMultiSelectListPreference
        android:key="LessonRemindTimes"
        android:title="@string/preferenceLessonRemindTitle"
        android:entries="@array/lessonRemindTimesEntries"
        android:entryValues="@array/lessonRemindTimesEntriesValues"
        android:defaultValue="@array/lessonRemindTimesDefaultValues"
        android:layout="@layout/customPreference"
        app:summaryNothingSelected="@string/preferenceLessonRemindSummary" />
    <androidx.preference.SwitchPreference
        android:key="UpdateSchedulesOnStart"
        android:title="@string/preferenceUpdateSchedulesOnStartTitle"
        android:summary="@string/preferenceUpdateSchedulesOnStartSummary"
        android:defaultValue="true"
        android:layout="@layout/customPreference" />
    <androidx.preference.SwitchPreference
        android:key="UseDarkTheme"
        android:title="@string/preferenceUseDarkThemeTitle"
        android:defaultValue="false"
        android:layout="@layout/customPreference" />
    <androidx.preference.SwitchPreference
        android:key="UseFabDateSelector"
        android:title="@string/preferenceUseFabDateSelectorTitle"
        android:summary="@string/preferenceUseFabDateSelectorSummary"
        android:defaultValue="true"
        android:layout="@layout/customPreference" />
    <androidx.preference.SwitchPreference
        android:key="DisplaySubjectEndTime"
        android:title="@string/preferenceDisplaySubjectEndTimeTitle"
        android:summary="@string/preferenceDisplaySubjectEndTimeSummary"
        android:defaultValue="true"
        android:layout="@layout/customPreference" />
    <androidx.preference.SwitchPreference
        android:key="DisplayAnotherWeekSubjects"
        android:title="@string/preferenceDisplayAnotherWeekSubjectsTitle"
        android:summary="@string/preferenceDisplayAnotherWeekSubjectsSummary"
        android:defaultValue="false"
        android:layout="@layout/customPreference" />
    <androidx.preference.SwitchPreference
        android:key="CheckUpdatesOnStart"
        android:title="@string/preferenceCheckUpdatesOnStartTitle"
        android:summary="@string/preferenceCheckUpdatesOnStartSummary"
        android:defaultValue="true"
        android:layout="@layout/customPreference" />
    <androidx.preference.CheckBoxPreference
        android:key="ReplayFeatureDiscovery"
        android:title="@string/preferenceReplayFeatureDiscoveryTitle"
        android:summaryOn="@string/preferenceReplayFeatureDiscoverySummaryOn"
        android:layout="@layout/customPreference" />
</androidx.preference.PreferenceScreen>